<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="30dp"
        android:id="@+id/rootView">
        <TextView
            android:id="@+id/enrollmentNo"
            android:text="BTXXYYYXXXX"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@drawable/border">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Form ID"
                style="@style/headingStyle"
                android:layout_weight="50"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:id="@+id/extensionFormId"
                android:text="wertyuiokjnbv cdf"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@drawable/border">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Name"
                style="@style/headingStyle"
                android:layout_weight="50"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:id="@+id/extensionName"
                android:text="wertyuiokjnbv cdf"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@drawable/border">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Reason"
                style="@style/headingStyle"
                android:layout_weight="50"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:id="@+id/extensionReason"
                android:text="wertyuiokjnbv cdf"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="50dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detailed Reason"
                style="@style/headingStyle"
                android:textAlignment="center"
                android:layout_weight="50"
                android:paddingTop="20dp"/>
            <TextView
                android:id="@+id/extensionTextReason"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:inputType="textMultiLine"
                android:layout_height="150dp"
                android:background="@drawable/border"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/approveExtensionForm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Approve Application"
                android:textColor="@color/white"
                android:background="@color/success"
                android:layout_weight="50"
                />
            <Button
                android:id="@+id/rejectExtensionForm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Reject Application"
                android:layout_weight="50"
                android:textColor="@color/white"
                android:background="@color/design_default_color_error"
                />
        </LinearLayout>

    </LinearLayout>
</ScrollView>